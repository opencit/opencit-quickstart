<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>com.intel.mtwilson.quickstart.packages.bin</groupId>
    <artifactId>cit-quickstart-linux-Ubuntu</artifactId>
    <version>3.1-SNAPSHOT</version>
    
    <packaging>pom</packaging>
    <description>Quickstart for Ubuntu Host type</description>
    
    <properties>
        <makeself.name>cit-quickstart-linux-${project.version}</makeself.name>
        <integrity.name>integrity</integrity.name>
        <confidentiality.name>confidentiality</confidentiality.name>
    </properties>
	
    <dependencies>
        <dependency>
            <groupId>com.intel.mtwilson.openstack.packages</groupId>
            <artifactId>mtwilson-openstack-trusted-node</artifactId>
            <version>${project.version}</version>
            <type>bin</type>
            <classifier>ubuntu</classifier>
        </dependency>
    </dependencies>
			
    <profiles>
        <profile>
            <id>integrityBuildUbuntu</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
                <property>
                    <name>integrity</name>  
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/${makeself.name}-${integrity.name}</outputDirectory>
                                    <excludeTransitive>true</excludeTransitive>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
		
        <profile>
            <id>confidentialityBuildUbuntu</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
                <property>
                    <name>confidentiality</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-dependencies</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}/${makeself.name}-${confidentiality.name}</outputDirectory>
                                    <excludeTransitive>true</excludeTransitive>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>			
        </profile>
    </profiles>
</project>